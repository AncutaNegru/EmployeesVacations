@model IEnumerable<EmployeesVacations.Models.EmployeeModel>

@{
    ViewBag.Title = "Index";
}

<h2>Employees</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-striped table-condensed table-hover">
    <tr>
        
        <th>
            @Html.DisplayNameFor(model => model.FullName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IDTeam)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IDBusinessUnit)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HiringDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TotalDaysOff)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DaysOffLeft)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        
        <td>
            @Html.DisplayFor(modelItem => item.FullName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TeamName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BusinessUnitName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.HiringDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TotalDaysOff)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DaysOffLeft)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.IDEmployee }) |
            @Html.ActionLink("Details", "Details", new { id=item.IDEmployee }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.IDEmployee })
        </td>
    </tr>
}

</table>
