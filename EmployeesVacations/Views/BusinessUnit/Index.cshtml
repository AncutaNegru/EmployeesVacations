@model IEnumerable<EmployeesVacations.Models.BusinessUnitModel>

@{
    ViewBag.Title = "Index";
}

<h2>Business Units</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-striped table-hover table-condensed">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BusinessUnitManagerName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BusinessUnitManagerName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.IDBusinessUnit }) |
            @Html.ActionLink("Details", "Details", new { id=item.IDBusinessUnit }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.IDBusinessUnit })
        </td>
    </tr>
}

</table>
