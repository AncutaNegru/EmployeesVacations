@model IEnumerable<EmployeesVacations.Models.VacationRequestModel>
@using Microsoft.AspNet.Identity;
@using EmployeesVacations.Repositories;

@{
    ViewBag.Title = "Index";
}

<h2>Vacation Requests</h2>

<br/>

<table class="table table-striped table-condensed table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.EmployeeFullName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Reason)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StartDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EndDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DaysRequested)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstApproval)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SecondApproval)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.EmployeeFullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Reason)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DaysRequested)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstApproval)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SecondApproval)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @if (User.IsInRole("Manager") || User.IsInRole("Lead"))
                {
                    @Html.ActionLink("Edit", "Edit", new { id = item.IDVacationRequest })
                    <span>|</span>
                }
                @Html.ActionLink("Details", "Details", new { id = item.IDVacationRequest })

                @if (User.IsInRole("Manager") || User.IsInRole("Lead") || User.IsInRole("Admin"))
                {
                    <span>|</span>
                    @Html.ActionLink("Delete", "Delete", new { id = item.IDVacationRequest })
                }
            </td>
        </tr>
    }
</table>
