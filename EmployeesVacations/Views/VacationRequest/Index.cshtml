            @Html.DisplayNameFor(model => model.EndDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DaysRequested)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstApproval)
        </th>
